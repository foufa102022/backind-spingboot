pipeline {
    agent any 
    stages {
        stage('Build and Package') {
            steps {
                dir('Backend/crowdapp') {
                    script {
                        sh './mvnw -DskipTests clean install --fail-at-end'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh '''
                       docker build -t spring-img Backend/crowdapp
                       docker tag spring-img:latest chetouiiftikhar/spring-img:${BUILD_ID}
                    '''
                }
            }
        }


        stage('Deploy Docker Image') {
            steps {
                script {
                    echo "Docker Container back_container deleting..."
                    sh "docker rm -f back_container"
                     echo "Docker Container back_container creating..."
                    sh "docker run -p 8888:8080 -dit --name back_container chetouiiftikhar/spring-img:${BUILD_ID}"
                }
            }
        }
    }
}
